keywords = {Big data,deep learning,load forecasting,long short-Term memory,machine learning,neural network,smart meter},
number = {5},
pages = {5271--5280},
publisher = {IEEE},
title = {{Deep Learning for Household Load Forecasting-A Novel Pooling Deep RNN}},
